{
  "name": "mcp-apps-practice",
  "private": true,
  "workspaces": [
    "apps/*",
    "iac/*"
  ],
  "type": "module",
  "scripts": {
    "type-check": "turbo run type-check",
    "lint:fmt": "oxfmt --check . --ignore-path .oxfmtignore && prettier --check '**/*.{json,yaml}'",
    "lint:oxlint": "oxlint .",
    "spell-check": "cspell --no-progress .",
    "lint": "turbo lint",
    "fix": "oxfmt --write . --ignore-path .oxfmtignore && prettier --write '**/*.{json,yaml}'"
  },
  "devDependencies": {
    "@cspell/dict-typescript": "^3.2.3",
    "@types/node": "^25.1.0",
    "cspell": "^9.6.2",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.7"
}
